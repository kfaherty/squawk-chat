  "scripts": {
    "clean": "npm run cleanBuild",
    "cleanBuild": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc --p tsconfig.json",
    "webpack": "NODE_ENV=production webpack --config ./src/webpack.config.js",
    "lint": "npm run tsLint && npm run stylelint",
    "prewebpack:production": "ENABLE_PORTAL=1 node bin/bundle.js",
    "webpack:production": "NODE_ENV=production webpack --config ./src/webpack.config.js",
    "webpackProduction": "npm run webpack:production",
    "test": "jest --coverage --forceExit",
    "start": "node dist/app.prod.js",
    "devStart": "node dist/app.dev.js",
    "debug": "node --inspect --debug=0.0.0.0:9229 --nolazy ./dist/app.dev.js",
    "build:watch": "tsc -w",
    "tsLint": "tslint -p .",
    "stylelint": "stylelint src/**/*.css",
    "posttest": "npm run lint"
  },
  "jest": {
    "transform": {
      "\\.(gql|graphql)$": "<rootDir>/config/graphqlPreprocessor.js",
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "setupFiles": [
      "<rootDir>/config/testSetup.js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "modulePathIgnorePatterns": [
      "/css/"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less)$": "<rootDir>/config/stubs/CSSStub.js"
    },
    "roots": [
      "<rootDir>/src"
    ]
  },
  "engines": {
    "node": ">=8.9",
    "yarn": ">=1.2.0"
  }
