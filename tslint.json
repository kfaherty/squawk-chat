{
  "extends": ["tslint-react", "tslint-microsoft-contrib"],
  "rules": {
      "adjacent-overload-signatures": true,
      "align": [
        true,
        "parameters",
        "arguments",
        "statements"
      ],
      "array-type": [true, "array-simple"],
      "arrow-parens": [true, "ban-single-arg-parens"],
      "arrow-return-shorthand": [true, "multiline"],
      "await-promise": true,
      "ban": false,
      "ban-comma-operator": true,
      "binary-expression-operand-order": true,
      "class-name": true,
      "comment-format": [
        true,
        "check-space"
      ],
      "completed-docs": false,
      "curly": true,
      "cyclomatic-complexity": true,
      "deprecation": true,
      "encoding": true,
      "eofline": true,
      "export-name": false,
      "forin": true,
      "function-name": [ true, {
        "method-regex": "^[a-z][\\w\\d]+$",
        "private-method-regex": "^_?[a-z][\\w\\d]+$",
        "protected-method-regex": "^[a-z][\\w\\d]+$",
        "static-method-regex": "^[a-z][\\w\\d]+$",
        "function-regex": "^[a-z][\\w\\d]+$"
      }],
      "indent": [ true, "spaces", 2 ],
      "import-name": false,
      "import-spacing": true,
      "interface-name": [true, "always-prefix"],
      "interface-over-type-literal": true,
      "jsdoc-format": true,
      "jsx-alignment": true,
      "jsx-ban-elements": false,
      "jsx-ban-props": false,
      "jsx-boolean-value": true,
      "jsx-curly-spacing": [true, "never"],
      "jsx-equals-spacing": [true, "never"],
      "jsx-key": true,
      "jsx-no-bind": true,
      "jsx-no-lambda": true,
      "jsx-no-multiline-js": false,
      "jsx-no-string-ref": true,
      "jsx-self-close": true,
      "jsx-space-before-trailing-slash": true,
      "jsx-use-translation-function": false,
      "jsx-wrap-multiline": true,
      "label-position": true,
      "linebreak-style": [ true, "LF" ],
      "match-default-export-name": false,
      "max-line-length": [ true, 140 ],
      "member-access": true,
      "member-ordering": [
        true,
        {
          "order": "statics-first"
        }
      ],
      "missing-jsdoc": false,
      "mocha-no-side-effect-code": false,
      "new-parens": true,
      "newline-before-return": true,
      "newline-per-chained-call": true,
      "no-any": true,
      "no-angle-bracket-type-assertion": true,
      "no-arg": true,
      "no-bitwise": true,
      "no-boolean-literal-compare": true,
      "no-console": [
        true,
        "debug",
        "info",
        "time",
        "timeEnd",
        "trace"
      ],
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": true,
      "no-construct": true,
      "no-date-parse": true,
      "no-debugger": true,
      "no-default-export": false,
      "no-duplicate-imports": true,
      "no-duplicate-super": true,
      "no-duplicate-switch-case": true,
      "no-duplicate-variable": true,
      "no-dynamic-delete": true,
      "no-empty": true,
      "no-empty-interface": true,
      "no-eval": true,
      "no-for-in-array": true,
      "no-implicit-dependencies": [true, "dev"],
      "no-import-side-effect": true,
      "no-inferred-empty-object-type": true,
      "no-irregular-whitespace": true,
      "no-internal-module": true,
      "no-invalid-template-strings": true,
      "no-invalid-this": true,
      "no-magic-numbers": [true, -1, 0, 1, 2, 10, 100, 1000],
      "no-mergeable-namespace": true,
      "no-misused-new": true,
      "no-multiline-string": false,
      "no-object-literal-type-assertion": true,
      "no-namespace": true,
      "no-non-null-assertion": true,
      "no-parameter-properties": false,
      "no-parameter-reassignment": true,
      "no-relative-imports": false,
      "no-reference": true,
      "no-reference-import": true,
      "no-require-imports": true,
      "no-return-await": true,
      "no-shadowed-variable": true,
      "no-single-line-block-comment": false,
      "no-sparse-arrays": true,
      "no-string-literal": true,
      "no-string-throw": true,
      "no-submodule-imports": [true, "lodash", "lodash-es", "react-apollo/test-utils"],
      "no-switch-case-fall-through": true,
      "no-this-assignment": true,
      "no-trailing-whitespace": true,
      "no-unbound-method": true,
      "no-unnecessary-callback-wrapper": true,
      "no-unnecessary-class": true,
      "no-unnecessary-initializer": true,
      "no-unnecessary-qualifier": true,
      "no-unnecessary-type-assertion": true,
      "no-unsafe-any": false,
      "no-unsafe-finally": true,
      "no-unused-expression": true,
      "no-null-keyword": false,
      "no-var-keyword": true,
      "no-var-requires": true,
      "no-void-expression": [true, "ignore-arrow-function-shorthand"],
      "number-literal-format": true,
      "object-literal-shorthand": true,
      "object-literal-key-quotes": [true, "as-needed"],
      "one-line": [
        true,
        "check-catch",
        "check-finally",
        "check-else",
        "check-open-brace",
        "check-whitespace"
      ],
      "one-variable-per-declaration": true,
      "only-arrow-functions": true,
      "ordered-imports": [
        true,
        {
          "grouped-imports": true,
          "import-sources-order": "any",
          "module-source-path": "full",
          "named-imports-order": "case-insensitive"
        }
      ],
      "prefer-array-literal": [ true, { "allow-type-parameters": true } ],
      "prefer-conditional-expression": [true, "check-else-if"],
      "prefer-const": true,
      "prefer-for-of": true,
      "prefer-function-over-method": [true, "allow-protected"],
      "prefer-method-signature": true,
      "prefer-object-spread": true,
      "prefer-readonly": true,
      "prefer-switch": true,
      "prefer-template": true,
      "prefer-type-cast": false,
      "prefer-while": true,
      "promise-function-async": true,
      "quotemark": [ true, "single", "jsx-single", "avoid-escape" ],
      "radix": true,
      "react-this-binding-issue": [ true, { "allow-anonymous-listeners": true } ],
      "restrict-plus-operands": true,
      "return-undefined": true,
      "semicolon": [true, "always"],
      "space-before-function-paren": true,
      "space-within-parens": false,
      "strict-boolean-expressions": false,
      "strict-type-predicates": true,
      "switch-default": true,
      "trailing-comma": false,
      "triple-equals": true,
      "typedef": [
        true,
        "parameter",
        "property-declaration"
      ],
      "typedef-whitespace": [
        true,
        {
          "call-signature": "nospace",
          "index-signature": "nospace",
          "parameter": "nospace",
          "property-declaration": "nospace",
          "variable-declaration": "nospace"
        }
      ],
      "type-literal-delimiter": true,
      "unified-signatures": true,
      "use-default-type-parameter": true,
      "use-isnan": true,
      "variable-name": [
        true,
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ],
      "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-module",
        "check-operator",
        "check-rest-spread",
        "check-separator",
        "check-type",
        "check-typecast",
        "check-type-operator",
        "check-preblock"
      ]
  }
}
